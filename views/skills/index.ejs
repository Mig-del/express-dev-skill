<!DOCTYPE html>
<html class="background" lang="en">
  <head> 
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title >Skills</title>
  </head>
  <body>
    <h1 class="name" >Skills</h1>
    <a class="create" href="/skills/new">Create Skill</a>
    <ul>
      <% skills.forEach(function(s) { %>
        <a href="/skills/<%= s.id %>"><li>
          <%= s.skill %> - <%= s.done ? 'done' : 'not done' %>
        </li></a>
      
      
        <div>
          <form action="/skills/<%= s.id%>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">DELETE <%= s.skill %> </button>
          </form>
        </div>
        <% }); %>
    </ul>
  </body>
</html>